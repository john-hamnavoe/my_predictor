<div class="mx-auto md:w-1/2">
  <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900"><%= "#{@competition.name} - Fixtures" %></h3>
  </div>
  <%= turbo_frame_tag "fixtures-container", class: "block w-full py-2 md:py-8 md:px-4 border border-gray-200 shadow-sm" do %>
    <div class="py-1 md:py-2 px-0 md:px-4 border-b-4 border-gray-200">
      <%= render "form", fixture: Fixture.new(competition: @competition), team_category_id: @competition.team_category_id %>
    </div>
    <ul id="fixtures">
      <%= render @fixtures %>
    </ul>
  <% end %>
</div>