<%= form_with(model: team, id: "#{dom_id(team)}_form") do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex items-stretch flex-grow">
    <%= form.hidden_field :team_category_id %>
    <%= render Forms::FieldComponent.new(form, :name, label: "Team Name", label_class: "sr-only") do |field| %>
      <% field.with_input_text(classes: "rounded-l-md", placeholder: "Add a new team...", autofocus: true, data: {controller: "autofocus"}) %>
    <% end %>    
    <%= render Forms::InlineButtonSubmitComponent.new(form) %>
  </div>
<% end %>