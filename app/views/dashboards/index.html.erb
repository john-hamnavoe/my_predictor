<div class="flex justify-between items-center">
  <h1 class="font-bold text-lg md:text-4xl">Hello <%= current_user.name %></h1>
  <%= render SecondaryLinkButtonComponent.new(title: "Join Competition", path: new_competition_entry_path) %>
</div>

<% @competition_entries.each do |entry| %>
  <div class="mt-2 overflow-hidden bg-white sm:rounded-lg sm:drop-shadow-md">
    <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
      <div class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
        <div class="ml-4 mt-4">
          <h3 class="text-lg font-medium leading-6 text-gray-900"><%= entry.competition.name %></h3>
          <p class="mt-1 text-sm text-gray-500">Lorem ipsum dolor sit amet consectetur adipisicing elit quam corrupti consectetur.</p>
        </div>
        <div class="ml-4 mt-4 flex-shrink-0">
          <%= render Fixtures::BadgeScoreComponent.new(entry.points) %>
        </div>    
        <div class="ml-4 mt-4 flex-shrink-0">
          <%= render Fixtures::BadgeCorrectComponent.new(entry.correct_scores) %>
        </div>                
        <div class="ml-4 mt-4 flex-shrink-0">
          <%= render PrimaryLinkButtonComponent.new(title: "Update Predictions", path: edit_competition_entry_path(entry), small: true) %>   
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 gap-1 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Card -->

      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <!-- Heroicon name: outline/scale -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 01-1.125-1.125M3.375 19.5h7.5c.621 0 1.125-.504 1.125-1.125m-9.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-7.5A1.125 1.125 0 0112 18.375m9.75-12.75c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125m19.5 0v1.5c0 .621-.504 1.125-1.125 1.125M2.25 5.625v1.5c0 .621.504 1.125 1.125 1.125m0 0h17.25m-17.25 0h7.5c.621 0 1.125.504 1.125 1.125M3.375 8.25c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m17.25-3.75h-7.5c-.621 0-1.125.504-1.125 1.125m8.625-1.125c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M12 10.875v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125M13.125 12h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125M20.625 12c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5M12 14.625v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 14.625c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m0 1.5v-1.5m0 0c0-.621.504-1.125 1.125-1.125m0 0h7.5" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="truncate text-sm font-medium text-gray-900">League Table</dt>
              </dl>
            </div>
          </div>
          <table class="mt-2 min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="bg-gray-50 px-6 py-1 text-left text-sm font-semibold text-gray-900" scope="col">Position</th>
                <th class="bg-gray-50 px-6 py-1 text-left text-sm font-semibold text-gray-900" scope="col">Player</th>
                <th class="bg-gray-50 px-6 py-1 text-right text-sm font-semibold text-gray-900" scope="col">Points</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr class="bg-white">
                <td class="px-6 py-1 text-sm text-gray-900">
                  <p class="truncate text-gray-500 group-hover:text-gray-900">1</p>
                </td>
                <td class="whitespace-nowrap px-6 py-1 text-left text-sm text-gray-500">
                  John Wallace
                </td>
                <td class="whitespace-nowrap px-6 py-1 text-right text-sm text-gray-900">
                  89
                </td>
              </tr>
              <tr class="bg-white">
                <td class=" px-6 py-1 text-sm text-gray-900">
                  <p class="truncate text-gray-500 group-hover:text-gray-900">2</p>
                </td>
                <td class="whitespace-nowrap px-6 py-1 text-left text-sm text-gray-500">
                  Lindsay Temple
                </td>
                <td class="whitespace-nowrap px-6 py-1 text-right text-sm text-gray-900">
                  78
                </td>
              </tr>
              <!-- More transactions... -->
            </tbody>
          </table>          
        </div>                   
      </div>
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <!-- Heroicon name: outline/scale -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
              </svg>

            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="truncate text-sm font-medium text-gray-900">Recent and Upcoming Fixtures</dt>
              </dl>
            </div>
          </div>
          <div class="ml-5 mt-2">
            <% Fixture.all.each do |fixture| %>
              <%= render Fixtures::DisplayComponent.new(fixture) %>
            <% end %>
          </div>          
        </div>
      </div>
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <!-- Heroicon name: outline/scale -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="truncate text-sm font-medium text-gray-900">Latest News Headlines</dt>
              </dl>
            </div>
          </div>        
        </div>
        <div class="bg-white px-5 py-3">
          <div class="text-sm">
            <a href="#" class="font-medium text-cyan-700 hover:text-cyan-900">View all</a>
          </div>
        </div>
      </div>
      <!-- More items... -->
    </div>
  </div>
  <% end %>
