<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Competitions</h1>
    <%= render PrimaryLinkButtonComponent.new(title: "New", path: new_competition_path) %>
  </div>
  <div id="competitions" class="pt-2 grid grid-cols-1 gap-4 sm:grid-cols-3">
    <%= render @competitions %>
  </div>
</div>
