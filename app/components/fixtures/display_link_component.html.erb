<div class="flex items-center">
  <div class="grow">
   
        <div class="grid grid-cols-4 gap-0 <%= font %>">
          <div class="grid place-items-end"><p><%=fixture.date.strftime("%d/%m/%Y")%></p></div>
          <div class="grid place-items-end"><p><%=fixture.home_team.name%></p></div>
          <%= link_to edit_competition_fixture_path(fixture.competition, fixture, params: {edit_score: true}), class:"grid grid-cols-2 gap-1 place-items-center underline" do  %>
            <% if scores_present? %>
              <p class="col-span-2"> v </p>
            <% else %>
              <p class="bg-yellow-400 border-gray-700 text-black border-2 px-2"> <%= fixture.home_score %> </p>
              <p class="bg-yellow-400 border-gray-700 text-black border-2 px-2"> <%= fixture.away_score %></p>
            <% end %>
          <% end %>
          <div><p><%=fixture.away_team.name%></p></div>
        </div>

  </div>
  <div class="grow-0 w-16">
      <%= link_to edit_competition_fixture_path(fixture.competition, fixture), class: "flex" do  %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>

      <% end %>
  </div>
</div>
  

