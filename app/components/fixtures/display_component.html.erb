<div class="flex items-center" data-controller="visibility">
  <div class="grow cursor-pointer" data-action="click->visibility#toggleTargets">
    <div  class="grid grid-cols-3 md:grid-cols-6 gap-0 <%= font %>">
      <div class="hidden md:grid place-items-end"><p class="text-sm"><%=fixture.date.strftime("%d/%m")%></p></div>
      <div class="grid md:col-span-2 place-items-end pr-1 pt-1"><p class="text-sm"><%=fixture.home_team.name%></p></div>
      <div class="grid grid-cols-2 gap-1 place-items-center">
        <% if scores_present? %>
          <p class="col-span-2"> v </p>
        <% else %>
          <p class="bg-yellow-400 border-gray-700 text-black border-2 w-7 px-1 py-0 text-sm text-center"> <%= fixture.home_score %> </p>
          <p class="bg-yellow-400 border-gray-700 text-black border-2 w-7 px-1 py-0 text-sm text-center"> <%= fixture.away_score %></p>
        <% end %>
      </div>
      <div class="grid md:col-span-2 pl-1 place-items-start pt-1"><p class="text-sm "><%=fixture.away_team.name%></p></div>
    </div>
    <div data-visibility-target="hideable" hidden>
    <%= turbo_frame_tag dom_id(fixture, :predictions), loading: :lazy, src: predictions_competition_fixture_path(fixture.competition, fixture) do %>
      <div class="text-indigo-600 text-sm italic">Loading...</div>
    <% end %>
    </div>
  </div>
</div>


